{
  "name": "manga-app",
  "version": "0.0.1",
  "description": "Desktop app for viewing/downloading manga",
  "main": "src/main.js",
  "author": "Shinudesu",
  "repository": "https://github.com/Shinudesu/Hakuro",
  "license": "MIT",
  "scripts": {
    "wait-host": "wait-on http://localhost:8080/ ",
    "electron-dev": "concurrently \"cross-env NODE_ENV=development webpack-dev-server --mode development --config webpack/dev.config.js\" \"yarn wait-host && cross-env NODE_ENV=development electron src/main.js\"",
    "electron-pre-release": "cross-env NODE_ENV=pre-release webpack --mode production --config webpack/dev.config.js && build - em.main=src.main.js",
    "electron-release": "cross-env NODE_ENV=production webpack --mode production --config webpack/prod.config.js && build - em.main=src.main.js"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "electron": "^4.0.1",
    "electron-builder": "^20.38.4",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.0.1",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.11.0",
    "react-hot-loader": "^4.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "wait-on": "^3.2.0",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@material-ui/core": "^3.8.3",
    "@material-ui/icons": "^3.0.2",
    "cheerio": "^1.0.0-rc.2",
    "cross-env": "^5.2.0",
    "electron-log": "^2.2.17",
    "electron-updater": "^4.0.6",
    "electron-window-state": "^5.0.3",
    "jquery": "^3.3.1",
    "moment": "^2.23.0",
    "puppeteer": "^1.11.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "react-router-page-transition": "^3.1.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "source-map-support": "^0.5.9",
    "tough-cookie": "3.0.0",
    "typeface-roboto": "^0.0.54"
  },
  "browser": {
    "./lib/BrowserFetcher.js": false,
    "./node6/lib/Puppeteer": false,
    "ws": "./utils/browser/WebSocket",
    "fs": false,
    "child_process": false,
    "rimraf": false,
    "readline": false
  },
  "jest": {
    "moduleFileExtensions": [
      "json"
    ]
  },
  "build": {
    "appId": "com.github.Shinudesu.Haruko",
    "productName": "Hakuro",
    "copyright": "",
    "asar": true,
    "win": {
      "target": "NSIS"
    },
    "files": [
      "src",
      "build",
      "*.js"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "license": "LICENSE",
      "deleteAppDataOnUninstall": true
    },
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Shinudesu",
        "repo": "Haruko"
      }
    ]
  }
}
